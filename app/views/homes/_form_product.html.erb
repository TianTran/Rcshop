<%= form_for order_item, remote: true do |f| %>
	
		<div class="tabs-element">
			<%= link_to image_tag(product.images_url(:thumbnail), alt: "images", class: "content-tab-images"), product_path(product) %>
			<div class="content-tab-name">
				<%= link_to product.name, product_path(product) %>
			</div>
			<% if product.sale == true %>
				<div class = "box-sale"><p class="text-sale">SALE</p></div>
				<p class="pride">$ <%=product.price_sell %>
					<span class="pride-old"><%= product.price %></span>
				</p>
			<% else %>
				<p class="pride">$ <%= product.price %></p>
			<% end %>
			<%= f.hidden_field :product_id, value: product.id %>
			<%= f.hidden_field :quantity, value: 1 %>
			<div class="content-tab-button">
				<%= button_tag(type: 'submit', class: "btn btn-default" ) do %>
					<span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> ADD TO CART
				<% end %>
			</div>
		</div>

<% end %>